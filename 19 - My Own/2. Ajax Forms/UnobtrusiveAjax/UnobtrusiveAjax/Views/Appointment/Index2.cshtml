@model string

@{
    ViewBag.Title = "Index2";

    // Disable Unobtrusive JavaScript
    Html.EnableUnobtrusiveJavaScript(false);
    Layout = "~/Views/Shared/_LayoutObtrusiveJS.cshtml";

    AjaxOptions ajaxOptions = new AjaxOptions
    {
        UpdateTargetId = "tabledata",
    };
}

<h2>Appointment List</h2>

@using (Ajax.BeginForm("AppointmentList", ajaxOptions))
{
    <table>
        <thead>
            <tr>
                <th>Client Name</th>
                <th>Appointment Date</th>
            </tr>
        </thead>
        <tbody id="tabledata">
            @Html.Action("AppointmentList", new { name = Model })
        </tbody>
    </table>
    
    <p>
        @Html.DropDownList("name", new SelectList(new[] { "All", "Joe", "Jane", "Bob", },
                                                  Model ?? "All"))

        <input type="submit" value="Submit" />
    </p>
}
